<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:s="/lib/publishoverssh">

    <j:set var="m" value="${descriptor.commonManageMessages}"/>

    <f:section title="${%section.title}" description="${%section.description}">
        <f:entry title="${%common.entry}" help="${descriptor.getHelpFile('defaultKeySummary')}"/>
        <f:property field="commonConfig"/>
        <f:entry title="${%hostconfig.entry}">
            <j:scope>
                <j:set var="descriptor" value="${descriptor.hostConfigurationDescriptor}"/>
                <f:repeatable var="instance" items="${instance.hostConfigurations}" header="${%hostconfig.dragAndDrop}">
                    <s:blockWrapper>
                        <st:include page="config.jelly" class="${descriptor.clazz}"/>
                        <f:entry title="">
                            <div align="right">
                                <f:repeatableDeleteButton />
                            </div>
                        </f:entry>
                    </s:blockWrapper>
                </f:repeatable>
            </j:scope>
        </f:entry>
        <j:if test="${descriptor.enableOverrideDefaults}">
            <f:advanced>
                <f:entry>
                    <f:dropdownDescriptorSelector title="${m.defaults()}" field="defaults" default="${descriptor.pluginDefaultsDescriptor}"/>
                </f:entry>
            </f:advanced>
        </j:if>
    </f:section>

</j:jelly>
